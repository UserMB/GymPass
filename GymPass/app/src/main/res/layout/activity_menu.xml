<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.jakubkurtiak.gympass.MenuActivity">
    <ImageView
        android:id="@+id/badge"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/badge_regular_member"/>
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:gravity="end"/>
    <TextView
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="44sp"
        android:layout_below="@id/top" />

    <LinearLayout
        android:id="@+id/upperButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/gapUnderGymPassLogo"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <TextView
            android:id="@+id/your_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buttonShowPass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickOpenPass"
            android:textColor="@color/colorAccentLight"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_below="@+id/upperButtons"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <TextView
            android:id="@+id/and_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buttonReadNews"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickReadNews"
            android:textColor="@color/colorAccentLight"/>
        <Button
            android:id="@+id/buttonContact"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickContactUs"
            android:textColor="@color/colorAccentLight"/>
        <Button
            android:id="@+id/buttonShare"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickShare"
            android:textColor="@color/colorAccentLight"/>
        <Button
            android:id="@+id/buttonVideos"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickVideos"
            android:textColor="@color/colorAccentLight"/>
        <Button
            android:id="@+id/buttonWorkout"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickWorkout"
            android:textColor="@color/colorAccentLight"/>
        <Button
            android:id="@+id/buttonDeregister"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:onClick="clickDeregister"
            android:textColor="@color/colorAccentLight"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
